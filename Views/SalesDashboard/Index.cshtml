@{
    Layout = "~/Views/Shared/_SalesDashboardLayout.cshtml";
}

<!-- SalesDashboard Index Page -->
@{
    ViewData["Title"] = "Sales Dashboard";
}

<div class="min-h-screen bg-gray-100">
    <!-- Header -->
    <header class="bg-white shadow p-4">
        <div class="flex items-center justify-between max-w-7xl mx-auto">
            <!-- Kullanıcı Bilgisi -->
            <div class="flex items-center space-x-4">
                <img src="/img/profile-placeholder.png" alt="Profil Fotoğrafı" class="h-10 w-10 rounded-full border border-gray-300">
                <div>
                    <span class="block text-gray-900 font-semibold">@ViewBag.UserFullName</span>
                </div>
            </div>

            <!-- Hesabım -->
            <div class="flex items-center space-x-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3zm0-6C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2z" />
                </svg>
                <a href="/Account/Profile" class="text-gray-800 font-medium hover:text-blue-600">Hesabım</a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main>
        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <!-- Cards Section -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Example Card -->
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="px-4 py-5 sm:p-6">
                        <h3 class="text-lg leading-6 font-medium text-gray-900">Günlük Satışlar</h3>
                        <div class="mt-2 text-sm text-gray-500">
                            Bugün yapılan toplam satışları görüntüleyin.
                        </div>
                    </div>
                </div>

                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="px-4 py-5 sm:p-6">
                        <h3 class="text-lg leading-6 font-medium text-gray-900">Müşteri Talepleri</h3>
                        <div class="mt-2 text-sm text-gray-500">
                            Aktif müşteri taleplerini inceleyin.
                        </div>
                    </div>
                </div>

                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="px-4 py-5 sm:p-6">
                        <h3 class="text-lg leading-6 font-medium text-gray-900">Satış Analizleri</h3>
                        <div class="mt-2 text-sm text-gray-500">
                            Ayrıntılı satış analizlerinizi görüntüleyin.
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="mt-8">
                <div class="bg-white shadow overflow-hidden sm:rounded-lg p-6">
                    <h2 class="text-2xl font-bold text-gray-900">Satış Grafiği</h2>
                    <p class="text-sm text-gray-500">Satışların zaman içindeki dağılımını inceleyin.</p>
                    <!-- Placeholder for chart -->
                    <div class="mt-4 bg-gray-200 h-64 rounded-lg">
                        <p class="text-center text-gray-500 pt-24">Grafik alanı buraya gelecek</p>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
