<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRMSardis</title>
    <link href="~/css/output.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            overflow: hidden;
        }
        .sidebar {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 20%;
            background-color: #1e3a8a; /* Blue-800 */
            color: white;
        }
        .main-content {
            flex: 1;
            overflow-y: auto;
            padding: 1rem;
            background-color: #f9fafb; /* Gray-100 */
        }
        .sidebar .menu {
            flex: 1;
            padding: 1rem;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <!-- Logo ve Firma Adı -->
        <div class="text-center p-6 border-b border-blue-600">
            <img src="/img/company-logo.png" alt="Firma Logosu" class="h-16 w-auto mb-2">
            <h1 class="text-xl font-bold">CRMSardis</h1>
        </div>
        <!-- Menü -->
        <div class="menu">
            <ul class="space-y-4">
                <li><a href="/Customers" class="block py-2 px-4 bg-blue-700 rounded hover:bg-blue-600 transition duration-300">Müşteriler</a></li>
                <li><a href="/Call" class="block py-2 px-4 bg-blue-700 rounded hover:bg-blue-600 transition duration-300">Aramalar</a></li>
            </ul>
        </div>
        <!-- Alt Kısım -->
        <div class="p-6 border-t border-blue-600">
            <a href="/Account/Logout" class="block py-2 px-4 bg-red-600 text-center rounded hover:bg-red-500 transition duration-300">Çıkış</a>
        </div>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>
</body>
</html>
